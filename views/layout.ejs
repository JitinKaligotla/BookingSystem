<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Ride Booking App</title>

  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">

  <!-- Header -->
  <header class="bg-white shadow p-4 mb-6">
    <div class="max-w-6xl mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold text-blue-600">Ride Booking System</h1>
      <div>
        <% if (currentUser) { %>
          <span class="mr-4">Welcome, <%= currentUser.username %></span>
          <a href="/logout" class="text-red-500 hover:underline">Logout</a>
        <% } else { %>
          <a href="/login" class="text-blue-500 hover:underline mr-4">Login</a>
          <a href="/register" class="text-blue-500 hover:underline">Register</a>
        <% } %>
      </div>
    </div>

    <!-- Nav -->
    <nav class="mt-4 max-w-6xl mx-auto flex flex-wrap gap-4 text-sm text-gray-700">
      <a href="/home" class="hover:text-blue-600">Home</a>
      <% if (currentUser && currentUser.role === 'user') { %>
        <a href="/bookARide" class="hover:text-blue-600">Book a Ride</a>
        <a href="/mybookings" class="hover:text-blue-600">My Bookings</a>
      <% } else if (currentUser && currentUser.role === 'driver') { %>
        <a href="/postARide" class="hover:text-blue-600">Post a Ride</a>
        <a href="/allPosts" class="hover:text-blue-600">View My Rides</a>
      <% } %>
    </nav>
  </header>

  <!-- Flash Messages -->
  <div class="max-w-3xl mx-auto mb-6 px-4">
    <% if (success && success.length > 0) { %>
      <p class="text-green-600 font-medium mb-2"><%= success %></p>
    <% } %>
    <% if (error && error.length > 0) { %>
      <p class="text-red-600 font-medium mb-2"><%= error %></p>
    <% } %>
  </div>

  <!-- Page Body -->
  <main class="max-w-6xl mx-auto px-4">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="mt-12 text-center text-sm text-gray-500 py-6 border-t">
    &copy; 2025 Ride Booking App
  </footer>

</body>
</html>
