<% layout('layout') -%>

<div class="max-w-4xl mx-auto text-center py-12">
  <h1 class="text-4xl font-bold mb-4 text-blue-600">Welcome to RideShare!</h1>
  <p class="text-lg text-gray-700 mb-6">
    Book or offer rides effortlessly and travel with comfort.
  </p>
  <br>
  <br>
  <p class="text-gray-500 mb-8">
    Whether you're a driver looking to post a ride or a passenger wanting to book one, we have you covered.
  </p>
  <p class="text-gray-500 mb-8">
    <strong>Current User  Role:</strong> <%= currentUser ? currentUser.role : "Not logged in" %>
  </p>

  <% if (!currentUser) { %>
    <div class="space-x-4">
      <a href="/register" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Register</a>
      <a href="/login" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">Login</a>
    </div>
  <% } else { %>
    <div class="space-y-4">
      <p class="text-xl font-medium text-green-600">
        Hello, <%= currentUser.username %> ðŸ‘‹ (<%= currentUser.role %>)
      </p>

      <% if (currentUser.role === 'driver') { %>
        <a href="/postARide" class="inline-block px-6 py-3 bg-blue-500 text-white rounded hover:bg-blue-600">
          Post a Ride
        </a>
        <a href="/allPosts" class="inline-block px-6 py-3 bg-indigo-500 text-white rounded hover:bg-indigo-600">
          View My Rides
        </a>
      <% } else { %>
        <a href="/bookARide" class="inline-block px-6 py-3 bg-green-500 text-white rounded hover:bg-green-600">
          Book a Ride
        </a>
        <a href="/mybookings" class="inline-block px-6 py-3 bg-purple-500 text-white rounded hover:bg-purple-600">
          My Bookings
        </a>
      <% } %>

      <a href="/logout" class="inline-block px-4 py-2 mt-4 text-red-500 hover:underline">
        Logout
      </a>
    </div>
  <% } %>
</div>

<div class="max-w-4xl mx-auto text-center py-12">
  <h2 class="text-2xl font-semibold mb-4">Why Choose RideShare?</h2>
  <p class="text-gray-600 mb-6">
    Connect with drivers and passengers in your area, share rides, and save costs while enjoying a comfortable journey.
  </p>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition">
      <h3 class="text-xl font-semibold mb-2">Easy Booking</h3>
      <p class="text-gray-600">Book rides in just a few clicks. No hassle, no waiting.</p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition">
      <h3 class="text-xl font-semibold mb-2">Safe & Secure</h3>
      <p class="text-gray-600">All rides are verified. Travel with peace of mind.</p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition">
      <h3 class="text-xl font-semibold mb-2">Community Driven</h3>
      <p class="text-gray-600">Join a community of like-minded travelers. Share experiences and tips.</p>
    </div>
  </div>
</div>
