<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Book A Ride</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen p-6">
  <% if (error && error.length > 0) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
    <% error.forEach(msg => { %>
      <p><%= msg %></p>
    <% }) %>
    </div>
  <% } %>
  <% if(success && success.length > 0) { %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <% success.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>  
  <% } %>


  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-center text-indigo-600 mb-8">Available Rides</h1>

    <ul class="space-y-6">
      <% posts.forEach(post => { %>
        <li class="bg-white p-6 rounded-xl shadow-md border border-gray-200">
          <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= post.destination %></h2>
          <p><span class="font-medium text-gray-600">Driver Phone:</span> <%= post.driverPhone %></p>
          <p><span class="font-medium text-gray-600">Vehicle Number:</span> <%= post.vehicleNumber %></p>
          <p><span class="font-medium text-gray-600">Vehicle Type:</span> <%= post.vehicleType %></p>
          <p><span class="font-medium text-gray-600">Available Seats:</span> <%= post.availableSeats %></p>
          <p><span class="font-medium text-gray-600">Fare:</span> $<%= post.fare %></p>
          <p><span class="font-medium text-gray-600">Posted by:</span> <%= post.driverName %></p>
          <p><span class="font-medium text-gray-600">Departure:</span> <%= new Date(post.departureTime).toLocaleString() %></p>

          <form action="/book/<%= post._id %>" method="get" class="mt-4">
            <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition">
              Book Now
            </button>
          </form>
        </li>
      <% }) %>
    </ul>

   <form action="/home" method="GET" class="mt-4">
        <button type="submit"
                class="w-full bg-gray-300 text-gray-800 py-2 rounded-lg hover:bg-gray-400 transition">
          Back to Home
        </button>
    </form>
  </div>

</body>
</html>
